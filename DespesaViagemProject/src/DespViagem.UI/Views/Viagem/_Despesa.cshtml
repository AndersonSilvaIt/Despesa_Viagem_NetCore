@model DespViagem.UI.ViewModels.ViagemViewModel

<div class="container">
    <div class="form-row">
        <div class="form-group col-md-6 col-sm-12">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Despesa.Descricao" class="control-label"></label>
                    <input asp-for="Despesa.Descricao" class="form-control" />
                    <span asp-validation-for="Despesa.Descricao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Despesa.Local" class="control-label"></label>
                    <input asp-for="Despesa.Local" class="form-control" />
                    <span asp-validation-for="Despesa.Local" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Despesa.Valor" class="control-label"></label>
                    <input asp-for="Despesa.Valor" class="form-control" />
                    <span asp-validation-for="Despesa.Valor" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Despesa.DataCadastro" class="control-label"></label>
                    <input type="date" asp-for="Despesa.DataCadastro" class="form-control" />
                </div>
                <!--<div class="col-md-6 offset-md-6"></div>-->
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Despesa.Observacao" class="control-label"></label>
                    <textarea asp-for="Despesa.Observacao" class="form-control" rows="5"></textarea>
                    <!--<input asp-for="Despesa.Observacao" class="form-control" />-->
                </div>
            </div>
        </div>

        <div class="form-group col-md-6 col-sm-12">
            TESTE
        </div>

    </div>

</div>