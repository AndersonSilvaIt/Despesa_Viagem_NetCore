@model IEnumerable<DespViagem.UI.ViewModels.DespesaViewModel>

@{
    <br />
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th> Descrição</th>
                <th> Local </th>
                <th> Valor </th>
                <th> Data Despesa </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Descricao) </td>
                    <td> @Html.DisplayFor(modelItem => item.Local) </td>
                    <td> @item.Valor.ToString("C") </td>
                    <td> @item.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss") </td>

                    <td>
                        <a supress-by-action="AtualizarDespesa, ObterDespesa" asp-action="AtualizarDespesa" asp-route-id="@item.Id" class="btn btn-info" data-modal="">
                            <span title="Editar" class="fa fa-pencil-alt"></span>
                        </a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
       
		$(document).ready(function () {
			alert('Passou02');
            AjaxModal('DespesaTarget');
        });

    </script>
}

@section Styles {

    <style type="text/css">

        .modal-dialog {
            max-width: 80%;
        }
    </style>
}