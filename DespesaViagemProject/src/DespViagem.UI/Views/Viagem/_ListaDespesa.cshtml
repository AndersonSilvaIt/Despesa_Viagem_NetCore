@model IEnumerable<DespViagem.UI.ViewModels.DespesaViewModel>

@{
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                </th>
                <th>Descrição</th>
                <th>
                    Local
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Data Cadastro
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td>
                    @item.Valor.ToString("C")
                </td>

                <td>
                    <a supress-by-action="Edit, ObterDespesa" asp-action="AtualizarDespesa" asp-route-id="@item.Id" class="btn btn-info" data-modal="">
                        <!-- o asp-route-id é o parâmetro que preciso passar, como na controller o parametro chama-se "id", então aqui precisa ser asp-route-id -->
                        <span title="Editar" class="fa fa-pencil-alt"></span>
                    </a>
                </td>
